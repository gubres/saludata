<div class="accordion-item">
    <h2 class="accordion-header" id="headingClasificacionSanguinea">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseClasificacionSanguinea" aria-expanded="true" aria-controls="collapseClasificacionSanguinea">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#000000" viewBox="0 0 256 256">
                <path d="M237.66,86.34l-60-60a8,8,0,0,0-11.32,0L37.11,155.57a44.77,44.77,0,0,0,63.32,63.32L212.32,107l22.21-7.4a8,8,0,0,0,3.13-13.25ZM89.11,207.57a28.77,28.77,0,0,1-40.68-40.68l28.8-28.8c8.47-2.9,21.75-4,39.07,5,10.6,5.54,20.18,8,28.56,8.73ZM205.47,92.41a8,8,0,0,0-3.13,1.93l-39.57,39.57c-8.47,2.9-21.75,4-39.07-5-10.6-5.54-20.18-8-28.56-8.73L172,43.31,217.19,88.5Z"></path>
            </svg>
            <strong class="mx-2">Clasificación Sanguínea</strong>
        </button>
    </h2>
    <div id="collapseClasificacionSanguinea" class="accordion-collapse collapse" aria-labelledby="headingClasificacionSanguinea" data-bs-parent="#accordionExample">
        <div class="accordion-body">
        {% if data.clasificacion_sanguinea is empty %}
                <a href="{{ path('clasificacion_sanguinea_new', {'id': paciente.id}) }}" class="btn btn-primary">Añadir Clasificación Sanguínea</a>
            {% else %}
                <a href="{{ path('clasificacion_sanguinea_edit', {'id': data.clasificacion_sanguinea[0].id}) }}" class="btn btn-primary">Editar Clasificación Sanguínea</a>
            {% endif %}
            {% if data.clasificacion_sanguinea is empty %}
                <p>Sin datos</p>
            {% else %}
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr>
                            <th>Tipo</th>
                            <th>Rh</th>
                            <th>Donante</th>
                            <th>Descripción</th>
                            <th>Fecha ultima donación</th>
                            <th>Frecuencia</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {% for clasificacion in data.clasificacion_sanguinea %}
                            <tr>
                                <td>{{ clasificacion.tipo }}</td>
                                <td>{{ clasificacion.rh }}</td>
                                <td>{{ clasificacion.donante ? 'Sí' : 'No' }}</td>
                                <td>{{ clasificacion.descripcion }}</td>
                                <td>{{ clasificacion.ultimaDonacion ? clasificacion.ultimaDonacion|date('d-m-Y') : 'N/A' }}</td>
                                <td>{{ clasificacion.frecuencia }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
            
        </div>
    </div>
</div>
