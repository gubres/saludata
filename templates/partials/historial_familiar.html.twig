                    <li>Madre Viva: {{ data.historial_familiar.madreVivo ? 'Sí' : 'No' }}</li>
                    <li>Hermanos: {{ data.historial_familiar.hermanos }}, Hermanos Vivos: {{ data.historial_familiar.hermanosVivos ? 'Sí' : 'No' }}</li>
                </ul>
            {% endif %}
            <a href="{{ path('historial_familiar_new', {'id': paciente.id}) }}" class="btn btn-primary">Añadir Historial Familiar</a>
