<div class="accordion-item">
    <h2 class="accordion-header" id="headingHistorialFamiliar">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHistorialFamiliar" aria-expanded="true" aria-controls="collapseHistorialFamiliar">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#000000" viewBox="0 0 256 256">
                <path d="M200,204.5V232a8,8,0,0,1-16,0V204.5a63.67,63.67,0,0,0-35.38-57.25l-48.4-24.19A79.58,79.58,0,0,1,56,51.5V24a8,8,0,0,1,16,0V51.5a63.67,63.67,0,0,0,35.38,57.25l48.4,24.19A79.58,79.58,0,0,1,200,204.5ZM160,200H72.17a63.59,63.59,0,0,1,3.23-16h72.71a8,8,0,0,0,0-16H83.46a63.71,63.71,0,0,1,14.65-15.08A8,8,0,1,0,88.64,140,80.27,80.27,0,0,0,56,204.5V232a8,8,0,0,0,16,0V216h88a8,8,0,0,0,0-16ZM192,16a8,8,0,0,0-8,8V40H96a8,8,0,0,0,0,16h87.83a63.59,63.59,0,0,1-3.23,16H107.89a8,8,0,1,0,0,16h64.65a63.71,63.71,0,0,1-14.65,15.08,8,8,0,0,0,9.47,12.9A80.27,80.27,0,0,0,200,51.5V24A8,8,0,0,0,192,16Z"></path>
            </svg>
            <strong class="mx-2">Historial Familiar</strong>
        </button>
    </h2>
    <div id="collapseHistorialFamiliar" class="accordion-collapse collapse" aria-labelledby="headingHistorialFamiliar" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          {% if data.historial_familiar is empty %}
                <a href="{{ path('historial_familiar_new', {'id': paciente.id}) }}" class="btn btn-primary">Añadir Historial Familiar</a>
            {% else %}
                <a href="{{ path('historial_familiar_edit', {'id': data.historial_familiar[0].id}) }}" class="btn btn-primary">Editar Historial Familiar</a>
            {% endif %}
            {% if data.historial_familiar is empty %}
                <p class="mt-3">Sin datos</p>
            {% else %}
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr>
                            <th>Padre Vivo</th>
                            <th>Madre Viva</th>
                            <th>Hermanos</th>
                            <th>Hermanos Vivos</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {% for historial in data.historial_familiar %}
                            <tr>
                                <td>{{ historial.padreVivo ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.madreVivo ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.hermanos ? historial.hermanos : 'N/A' }}</td>
                                <td>{{ historial.hermanosVivos ? 'Sí' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>Hijos</th>
                                <th>Hijos Vivos</th>
                                <th>Edad Fallecimiento Hijos</th>
                                <th>Edad Fallecimiento Padre</th>
                            </tr>
                            <tr>
                                <td>{{ historial.hijos }}</td>
                                <td>{{ historial.hijosVivos ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.edadFallecimientoHijos ? historial.edadFallecimientoHijos : 'N/A' }}</td>
                                <td>{{ historial.edadFallecimientoPadre ? historial.edadFallecimientoPadre : 'N/A'}}</td>
                            </tr>
                            <tr>
                                <th>Edad Fallecimiento Madre</th>
                                <th>Edad Fallecimiento Hermanos</th>
                                <th>Causa Muerte Padre</th>
                                <th>Causa Muerte Madre</th>
                            </tr>
                            <tr>
                                <td>{{ historial.edadFallecimientoMadre ? historial.edadFallecimientoMadre : 'N/A' }}</td>
                                <td>{{ historial.edadFallecimientoHermanos ? historial.edadFallecimientoHermanos : 'N/A'}}</td>
                                <td>{{ historial.causaMuertePadre ? historial.causaMuertePadre : 'N/A'}}</td>
                                <td>{{ historial.causaMuerteMadre ? historial.causaMuerteMadre : 'N/A'}}</td>
                            </tr>
                            <tr>
                                <th>Causa Muerte Hermanos</th>
                                <th>Diabetes</th>
                                <th>Enfermedad Cardiaca</th>
                                <th>Hipertensión</th>
                            </tr>
                            <tr>
                                <td>{{ historial.causaMuerteHermanos ? historial.causaMuerteHermanos : 'N/A' }}</td>
                                <td>{{ historial.diabetes ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.enfermedadCardiaca ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.hipertension ? 'Sí' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>Enfermedad Metabólica</th>
                                <th>Cáncer</th>
                                <th>Tipo de Cáncer</th>
                                <th>Enfermedad Renal Crónica</th>
                            </tr>
                            <tr>
                                <td>{{ historial.enfermedadMetabolica ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.cancer ? 'Sí' : 'No' }}</td>
                                <td>{{ historial.tipoCancer ? historial.tipoCancer : 'N/A' }}</td>
                                <td>{{ historial.enfermedadRenalCronica ? 'Sí' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>Otra Enfermedad Crónica</th>
                                <th>Fecha </th>
                            </tr>
                            <tr>
                                <td>{{ historial.otraEnfermedadCronica ? historial.otraEnfermedadCronica : 'N/A' }}</td>
                                 <td>{{ historial.actualizadoEn ? historial.actualizadoEn|date('d-m-Y H:i') : historial.creadoEn|date('d-m-Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
          
        </div>
    </div>
</div>
