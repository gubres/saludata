<div class="accordion-item">
    <h2 class="accordion-header" id="headingQuejaActual">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseQuejaActual" aria-expanded="true" aria-controls="collapseQuejaActual">
           <strong> Queja Actual</strong>
        </button>
    </h2>
    <div id="collapseQuejaActual" class="accordion-collapse collapse" aria-labelledby="headingQuejaActual" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            {% if data.queja_actual is empty %}
                <p>Sin datos</p>
            {% else %}
                <table class="table table-striped">
                        <thead class="text-center">
                            <tr>
                                <th>Queja</th>
                                <th>Descripción</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                     <tbody>
                    {% for queja in data.queja_actual %}
                         <tr class="text-center">
                            <td> {{ queja.queja }}</td>
                            <td>{{ queja.descripcion }}</td>
                            <td>{{ queja.creadoEn|date('d-m-Y H:i') }}</td>
                         </tr>
                    {% endfor %}
                     </tbody>
                </table>
                {% endif %}
            <a href="{{ path('queja_actual_new', {'id': paciente.id}) }}" class="btn btn-primary">Añadir queja</a>
        </div>
    </div>
</div>
