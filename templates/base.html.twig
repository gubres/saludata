<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>SD</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
           <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        {% endblock %}

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>       
        <script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.min.js"></script>
            

            
            {% block importmap %}{{ importmap('app') }}{% endblock %}

        {% endblock %}
    </head>
<body>

    {% block header %}
<style>
      .bg-customh {
    background-color: #42c9d2;
    }
    .bg-customf {
        background-color: #1db1bc;
    }
</style>

<nav class="navbar fixed-top bg-customh">
    <div class="container-fluid ">
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
         <a href="http://www.saludata.es" title="Visitar inicio" class="navbar-brand text-end">
            <img src="/images/logo_03.png" alt="Logo" class="w-25 h-25 md:h-18 object-cover rounded-pill">
        </a>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h2 class="offcanvas-title" id="offcanvasNavbarLabel">
                    <a href="http://www.saludata.es" class="text-decoration-none text-dark">Inicio</a>
                </h2>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                    <p class="bi bi-door-open-fill d-block mb-3">Bienvenido {{ app.user.email }}</p>
                    <span class="alert alert-success d-block"> <a class=" nav-link text-dark" title="Ver perfil" href="{{path('app_usuarios_index')}}"> <i class="bi bi-person-square"></i> Ver perfil</a></span>
                    </li>
                    <li class="nav-item dropdown border-top pt-3">
                        <a class="nav-link dropdown-toggle alert alert-primary d-block mb-3 p-4" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-lines-fill"></i> Gestionar Pacientes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="{{ path('app_perfil') }}"><i class="bi bi-person-lines-fill"></i> Listado de pacientes</a></li>
                                <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_registar_paciente') }}"><i class="bi bi-person-plus"></i> Añadir nuevo paciente</a></li>
                    </li>
                </ul>
            {% endif %}
    

            <ul class="navbar-nav">
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item dropdown border-top pt-3">
                    <a class="nav-link dropdown-toggle alert alert-danger d-block mb-3 p-4 text-black" href="#" id="userManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-gear"></i> Gestionar Usuarios
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="userManagementDropdown">
                        <li>
                            <a class="dropdown-item" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus"></i> Registro de nuevos usuarios
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/roles">
                                <i class="bi bi-person-lock"></i> Usuarios registrados
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
            </ul>

                            <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li>
                    <form action="{{ path('app_logout') }}" method="post" class="d-block border-top pt-3">
                            <button type="submit" title="Hacer logout" class="btn btn-outline-secondary text-black alert alert-warning"><i class="bi bi-box-arrow-left"></i> Logout</button>
                        </form>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link text-black" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                    </li>
                    {% endif %}
                </ul>

            </div>
        </div>
    </div>   
</nav>

{% endblock %}

<body style="display: flex; flex-direction: column; min-height: 100vh;">
    <div style="flex-grow: 1; ">
        {% block body %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% endblock %}
    </div>

    {% block footer %}
    <div class="footer bg-customf text-white mt-5 style="flex-shrink: 0;">
        <div class="container py-3">
            <div class="row">
                <div class="col-12 text-center">
                    © {{ "now"|date("Y") }}  SaluData © Todos los derechos reservados.
                    <span class="ms-2">&#174;</span> 
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
</body>
</html>
