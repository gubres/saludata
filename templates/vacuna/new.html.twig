{% extends 'base.html.twig' %}

{% block title %}Nueva Vacuna{% endblock %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center pt-5">
    <div class="card w-75">
        <div class="card-header text-center">
            <h2>Nueva vacuna</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            
            <div class="form-group mt-3">
                {{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'control-label'}}) }}
                <div class="col-sm-12">
                    {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.dosis, 'Dosis', {'label_attr': {'class': 'control-label'}}) }}
                <div class="col-sm-12">
                    {{ form_widget(form.dosis, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dosis) }}
                </div>
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.ultimaDosis, 'Fecha Ãºltima Dosis', {'label_attr': {'class': 'control-label'}}) }}
                <div class="col-sm-12">
                    {{ form_widget(form.ultimaDosis, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.ultimaDosis) }}
                </div>
            </div>

            <div class="form-group text-center mt-4 mb-3 mx-3">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('paciente_ver', {'id': paciente.id}) }}" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
