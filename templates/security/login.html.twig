{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 400px;
            margin: auto;
        }

        .login-card {
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            font-weight: 500;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .link-primary {
            color: #007bff;
        }

        .link-primary:hover {
            color: #0056b3;
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-container">
        {% if app.user %}
        <div class="alert alert-info text-center">
            <p>Ya ha iniciado sesión como <strong>{{ app.user.userIdentifier }}</strong>.</p>
            <a href="{{ path('app_usuarios_index') }}" class="alert-link">Ir al perfil</a><br><br>
            <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                <p>No es: {{ app.user.userIdentifier }}? </p>
                <button type="submit" class="btn btn-warning btn-sm ml-2">Cerrar sesión</button>
            </form>
        </div>
        {% else %}
        <div class="card login-card">
            <div class="card-body">
                <h1 class="h3 mb-3 font-weight-normal text-center">Por favor, inicia sesión</h1>
                
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                {% endif %}
                
                <form action="{{ path('app_login') }}" method="post">
                    <div class="form-group mb-3">
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Contraseña</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                    <div class="form-group form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                        <label class="form-check-label" for="remember_me">Recuérdame</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary btn-block" type="submit">Iniciar sesión</button>
                    {% if is_granted('ROLE_ADMIN') %}
                    <p class="mt-3 text-center">
                        ¿No tienes una cuenta? <a href="{{ path('app_register') }}" class="link-primary">Regístrate aquí</a>
                    </p>
                    {% endif %}
                </form>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
