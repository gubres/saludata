
{% extends 'base.html.twig' %}

{% block title %}Contacto con el Supervisor{% endblock %}

{% block body %}
  	<script>
		if (!window.location.hash.includes('contacto')) {
window.location.hash = 'contacto';
window.location.reload();
}
</script>
<div class="container mt-5 pt-5">
    <h1>Contacto con el Soporte</h1>
    <div class="row gap-5">
        <div class="col-md-6">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.problem) }}
                    {{ form_widget(form.problem, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mt-2">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            {{ form_end(form) }}
        <a href="{{ path('app_perfil') }}" class="btn btn-warning bi bi-person-lines-fill mt-3" title="Volver a la lista">
            Listado de pacientes
        </a>
        </div>

        <div class="col-md-4">
            <h3>Otras formas de contacto</h3>
            <p><strong>Correo:</strong> soporte@saludata.es</p>
            <p><strong>Tel√©fono:</strong> 650 871 725</p>
   
       <div class="social-links">
    <a href="https://www.instagram.com/saludata" target="_blank" class="btn btn-instagram">
        <i class="fab fa-instagram"></i> Instagram
    </a>
    <a href="https://t.me/saludata" target="_blank" class="btn btn-telegram">
        <i class="fab fa-telegram"></i> Telegram
    </a>
    <a href="https://x.com/saludata" target="_blank" class="btn btn-twitter">
        <i class="fab fa-twitter"></i> X (Twitter)
    </a>
</div>

<style>
    .social-links {
        display: flex;
        flex-direction: row;
        gap: 10px;
    }
    .social-links .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px 10px;
        font-size: 16px;
        border-radius: 50px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .social-links .btn i {
        margin-right: 10px;
    }
    .btn-instagram {
        background-color: #e1306c;
        color: #fff;
        border: none;
    }
    .btn-instagram:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 8px 16px rgba(225, 48, 108, 0.4);
    }
    .btn-telegram {
        background-color: #0088cc;
        color: #fff;
        border: none;
    }
    .btn-telegram:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 8px 16px rgba(0, 136, 204, 0.4);
    }
    .btn-twitter {
        background-color: #1da1f2;
        color: #fff;
        border: none;
    }
    .btn-twitter:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 8px 16px rgba(29, 161, 242, 0.4);
    }
</style>

        </div>
    </div>
</div>
{% endblock %}

