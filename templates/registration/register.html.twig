{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5 ">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6 mt-3">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
                    
                    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                    
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {
                            attr: {'class': 'form-control'},
                            label: 'Email'
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.first, {
                            attr: {'class': 'form-control'},
                            label: 'Contraseña'
                        }) }}
                    </div>
                     <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.second, {
                            attr: {'class': 'form-control'},
                            label: 'Repetir Contraseña'
                        }) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_row(registrationForm.agreeTerms, {
                            attr: {'class': 'form-check-input'},
                            label: 'Concordar con los términos',
                            label_attr: {'class': 'form-check-label'}
                        }) }}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-md">Crear Cuenta</button>
                    </div>
                    
                    {{ form_end(registrationForm) }}
                    <div class="mt-4">
                ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="link-primary">Iniciar sesión</a>
            </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}
