{% extends 'base.html.twig' %}

{% block title %}Nuevo Historial Obstétrico y Ginecológico{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Nuevo Historial Obstétrico y Ginecológico</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.edadPrimeraRegla) }}
                {{ form_widget(form.edadPrimeraRegla, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.edadPrimeraRegla) }}
            </div>

            <div class="form-group">
                {{ form_label(form.edadUltimaRegla) }}
                {{ form_widget(form.edadUltimaRegla, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.edadUltimaRegla) }}
            </div>

            <!-- Agrega aquí los demás campos del formulario de la misma manera -->

            <button type="submit" class="btn btn-success mt-3">Guardar</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
